<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

  <bean class="org.onehippo.forge.webarchiving.hst.service.HstUrlServiceImpl"
        init-method="registerService" destroy-method="unregisterService">
    <property name="contextPath" value="#{servletContext.contextPath}"/>
    <property name="linkCreator" ref="org.hippoecm.hst.core.linking.HstLinkCreator"/>
    <property name="hstRequestContextComponent" ref="org.hippoecm.hst.core.internal.HstRequestContextComponent"/>
    <property name="hstURLFactory" ref="org.hippoecm.hst.core.component.HstURLFactory"/>
    <property name="hstManager" ref="org.hippoecm.hst.configuration.model.HstManager"/>
    <property name="host" value="localhost"/>
    <property name="port" value="8080"/>
    <property name="requestPath" value="/"/>
  </bean>

  <bean class="org.onehippo.forge.webarchiving.hst.events.ChannelPublicationEventListener"
        init-method="init" destroy-method="destroy"/>

  <bean class="org.onehippo.forge.webarchiving.hst.events.ProjectMergeEventListener"
        init-method="init" destroy-method="destroy"/>
</beans>
<sv:node xmlns:sv="http://www.jcp.org/jcr/sv/1.0" sv:name="webarchivingaddon">
  <sv:property sv:name="jcr:primaryType" sv:type="Name">
    <sv:value>hipposched:jobgroup</sv:value>
  </sv:property>
  <sv:node sv:name="updates-processor">
    <sv:property sv:name="jcr:primaryType" sv:type="Name">
      <sv:value>hipposched:repositoryjob</sv:value>
    </sv:property>
    <sv:property sv:multiple="true" sv:name="hipposched:attributeNames" sv:type="String">
      <sv:value>daysToLive</sv:value>
      <sv:value>searchLimit</sv:value>
    </sv:property>
    <sv:property sv:multiple="true" sv:name="hipposched:attributeValues" sv:type="String">
      <sv:value>365</sv:value>
      <sv:value>1000</sv:value>
    </sv:property>
    <sv:property sv:name="hipposched:enabled" sv:type="Boolean">
      <sv:value>true</sv:value>
    </sv:property>
    <sv:property sv:name="hipposched:repositoryJobClass" sv:type="String">
      <sv:value>org.onehippo.forge.webarchiving.cms.WebArchiveUpdatesProcessor</sv:value>
    </sv:property>
    <sv:node sv:name="hipposched:triggers">
      <sv:property sv:name="jcr:primaryType" sv:type="Name">
        <sv:value>hipposched:triggers</sv:value>
      </sv:property>
      <sv:node sv:name="nightly">
        <sv:property sv:name="jcr:primaryType" sv:type="Name">
          <sv:value>hipposched:crontrigger</sv:value>
        </sv:property>
        <sv:property sv:multiple="true" sv:name="jcr:mixinTypes" sv:type="Name">
          <sv:value>mix:lockable</sv:value>
        </sv:property>
        <sv:property sv:name="hipposched:cronExpression" sv:type="String">
          <!-- daily 5 AM-->
          <!--<sv:value>0 0 5 1/1 * ? *</sv:value>-->

          <!-- EVERY 20 MINUTES-->
          <!--<sv:value>*/20 * * * *</sv:value>-->

          <!-- EVERY MINUTE (testing)-->
          <sv:value>* * * * *</sv:value>

          <!-- EVERY MINUTE (testing)-->
          <!--<sv:value>0 0/1 * 1/1 * ? *</sv:value>-->
        </sv:property>
        <sv:property sv:name="hipposched:enabled" sv:type="Boolean">
          <sv:value>true</sv:value>
        </sv:property>
      </sv:node>
    </sv:node>
  </sv:node>
</sv:node>